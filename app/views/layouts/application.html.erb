<!DOCTYPE html>
<html>
<head>
  <title><%= title_helper(@title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= csrf_meta_tags %>
</head>
<body>

	<header>
		
		<div id = 'line'></div>
		
		<h1>
			<%= link_to root_path do %>
			<div id = 'shield'></div>
			 &nbsp;&nbsp;NEGOTIATIONS
			<% end %>
		</h1>
		
		<nav>
			<% if signed_in? %>
			
			<% end %>
			<li><%= link_to 'About', about_path %></li>
			<% unless signed_in? %>
			<li><%= link_to 'Log In', log_in_path %></li>
			<% else %>
			<li class = 'dropdown_trigger'><%= link_to 'Account', '#' %></li>
			<ul class = 'dropdown'>
				<li><%= link_to 'Profile', user_path(current_user) %></li>
				<li><%= link_to 'Settings', edit_user_path(current_user) %></li>
				<div class = 'divider'></div>
				<li><%= link_to 'Log Out', log_out_path, method: 'delete' %></li>
			</ul>
			<% end %>
		</nav>
		
	</header>
	
	<% flash.each do |key, value| %>
	<div class = "flash flash-<%= key %>">
		<%= value %>
	</div>
	<% end %>
	

	<section id = "<%= @page_id %>">

	<%= yield %>

	</section>

  	<!-- <%= debug(params) if Rails.env.development? %> -->

	<footer>
		<div>
		
		<p>Copyright <%= Time.now.year %> â€” <span>Keysar Lab</span><p>

		</div>
	</footer>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' %>
  <%= javascript_include_tag "coffeescript" %>
  <script src="/hashchange.js" type="text/javascript"></script>
  <script src="/easytabs.js" type="text/javascript"></script>
</body>
</html>