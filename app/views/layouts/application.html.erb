  <% if cookies[:locale] == 'he' %>
  	
	<style>
	@import url(http://fonts.googleapis.com/earlyaccess/alefhebrew.css);
		
/*	* {
		font-family: 'Alef Hebrew'
	} */
		
	p, input, div, textarea {
		text-align:right;
	}
	
	h1,h2,h3,h4,h5,h6 {
		text-align:center;
	}
	
	header h1 {
		text-align:right;
		left:-20px;
	}
	
	header nav {
		left:20px;
	}
	
	#home p {
		text-align:center;
	}
	
	#dot_slider {
		position:relative;
		text-align:left;
		transform: rotateY(180deg);
	}
	
	#wizard_page_3 div {
		text-align:left;
	}
	
	#wizard_page_4, #wizard_page_4 div {
		text-align:right;
	}
	
	#wizard_page_4 input[type='submit'], #wizard_page_4 button {
		float:right;
	}
	
	.dropdown {
		left:0px;
		top:15px;
	}
	
	.checkboxes input[type='checkbox'] {
		float:right;
	}
	
	.div_with_other input[type='checkbox'] {
		position:relative;
		top:13px;
	}
	
	.div_with_other .other_text {
		float:right;
		position:relative;
		top:14px;
	}
  		
	</style>
